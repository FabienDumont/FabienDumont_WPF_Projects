        <SubType>Designer</SubType>
      </Page>
      <Page Update="Core\Components\Layout.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
      <Page Update="Core\Components\NavigationBar.xaml">
        <Generator>MSBuild:Compile</Generator>
